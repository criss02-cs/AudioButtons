<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AudioButtons.Views.ButtonPage"
             xmlns:viewModels="clr-namespace:AudioButtons.ViewModels"
             x:DataType="viewModels:ButtonViewModel"
             Title="Nuovo bottone">
    <VerticalStackLayout
        Margin="10">
        <Label Text="Nome" TextColor="Black"/>
        <Entry Text="{Binding Name}"
               Placeholder="Inserisci il nome"/>
        <Label Text="Percorso" TextColor="Black"/>
        <Entry Text="{Binding AudioPath}" IsEnabled="False"/>
        <Button Text="Seleziona il file audio" Command="{Binding LoadAudio}"/>
    </VerticalStackLayout>
</ContentPage>