<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AudioButtons.Components.ButtonAudioComponent"
             xmlns:viewModels1="clr-namespace:AudioButtons.ViewModels"
             x:DataType="viewModels1:ButtonViewModel"
             BackgroundColor="White">
    <VerticalStackLayout>
        <Label Text="Nome" TextColor="Black"/>
        <Entry Text="{Binding Name}"
               Placeholder="Inserisci il nome"/>
        <Button Text="Seleziona il file audio" Command="{Binding LoadAudio}"/>
    </VerticalStackLayout>
</ContentView>
